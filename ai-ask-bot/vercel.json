{
  "version": 2,
  "framework": "create-react-app",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["data/**", "utils/**"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build",
        "installCommand": "npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "build/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "build/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "build/manifest.json"
    },
    {
      "src": "/logo192.png",
      "dest": "build/logo192.png"
    },
    {
      "src": "/logo512.png",
      "dest": "build/logo512.png"
    },
    {
      "src": "/robots.txt",
      "dest": "build/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
