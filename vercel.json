{
  "version": 2,
  "builds": [
    {
      "src": "ai-ask-bot/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run vercel-build"
      }
    },
    {
      "src": "ai-ask-bot/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/ai-ask-bot/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/ai-ask-bot/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
